<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@android:color/background_light"

    android:layout_height="match_parent">

    <TextView
        android:textColor="#80000000"
        android:text="Description:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#80000000"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="Roads and Bridges department mainly focusses on the construction, maintenance, operation, and managing Highways, Expressways, Roads, Bypasses, Bridges, Over-bridges etc."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/btn_make_a_bid"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@color/colorAccent"
            android:text="Make a bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/close"
            android:layout_marginLeft="35dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:text="Close"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
